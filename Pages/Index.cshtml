@page
@model IndexModel

@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron jumbotron-fluid jumbotron-container resume-jumbotron text-white">
    <div class="container-fluid jumbotron-content">
        <p class="text-center jumbotron-header mb-4">Hey there, I'm @Model.FullName!</p>
    </div>
</div>


<div class="container">
    <div class="resume-content">
        <img class="myself-image" src="https://i.imgur.com/T2XlFF5.jpeg" alt="Avatar">
    </div>
    <div class="resume-content">
        <h4 class="general-header mb-3">About Me:</h4>
        <p class="general-content mb-3">
            Enthusiastic software engineer with @Model.YearsOfExperience+ years of experience participating
            in the complete lifecycle of successfully launched applications. Skilled in developing requirements specifications,
            user documentation, test autimation, and architectural systems research. Strong written and verbal communications. Seeking software engineering position in which career growth
            and further skill development is embraced. Prepared to help provide software solutions using both the knowledge obtained studying at San Diego State University
            and experience gained working in the goverment contracting industry.
        </p>
    </div>
    <div class="resume-content" style="overflow: hidden">
        <div class="resume-content-half">
            <h4 class="general-header mb-3">Languages:</h4>
            <ul class="list-group general-content">
                @foreach (string language in Model.Languages)
            {
                <li class="list-item" style="width: 18rem;">
                    @language
                </li>
            }
            </ul>
        </div>
        <div class="resume-content-half">
            <h4 class="general-header mb-3">Technologies:</h4>
            <ul class="list-group general-content">
                @foreach (string technology in Model.Technologies)
            {
                <li class="list-item" style="width: 18rem;">
                    @technology
                </li>
            }
            </ul>
        </div>
    </div>
</div>